function fibonacci(n) {
    if (n <= 0) {
        return 0;
    } else if (n === 1) {
        return 1;
    } else {
        return fibonacci(n - 1) + fibonacci(n - 2);
    }
}

// Example usage:
const n = parseInt(prompt("Enter the position in the Fibonacci sequence: "));
const fibNumber = fibonacci(n);
console.log(`The ${n}th Fibonacci number is ${fibNumber}.`);
